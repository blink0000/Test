<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/list_item_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/list_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/list_brindex"
        android:layout_below="@+id/list_brindex"
        android:text="TextView" />

    <TextView
        android:id="@+id/list_brindex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_name"
        android:layout_toLeftOf="@+id/list_lastname"
        android:text="TextView" />

    <TextView
        android:id="@+id/list_lastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/list_brindex"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/list_name"
        android:text="TextView" />

    <TextView
        android:id="@+id/list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/list_item_imageview"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/list_item_imageview"
        android:text="name_list" />

</RelativeLayout>
